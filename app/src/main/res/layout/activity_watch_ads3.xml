<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:htext="http://schemas.android.com/tools"
    android:id="@+id/main_activity_DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/backgrwacth">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/rv_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txxx3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="83dp"
            android:layout_marginRight="83dp"
            android:background="@drawable/ironsource_button_shape"
            android:padding="5dp"
            android:text="initializing rewarded video" />





        <com.hanks.htextview.HTextView
            android:id="@+id/txxx3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#221D1D"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            htext:animateType="anvil"
            />


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>